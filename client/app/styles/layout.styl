.wrapper
    position relative
    width 60%
    height auto
    margin 0 auto
    
.content
    display block
    padding-top 25px
.logo
    text-align center
    padding 7vh 0
    
.mast-head
    position relative
    background #F4D44E
    height 70px
    .mast-core
        position relative
        margin 0 auto
        height 100%
        width 65%
        .mast-pfeed
            position absolute
            z-index 2
            top 5px
            left 0px
            width auto
            height calc( 100% - 10px )
            .mast-logo
                float left
                width auto
                height 60px
                img
                    height 100%
                    margin-right 10px
            .mast-info
                float left
                .site-title
                    text-transform uppercase
                    margin-top 10px
                    -webkit-font-smoothing antialiased
                    font-weight bold!important
                    font-weight 700
                    line-height 1
                    font-size 14px
                    margin-bottom 4px
                .site-description
                    font-size 10px
                    font-weight 700
                    -webkit-font-smoothing antialiased
                    font-weight bold!important
            &::after
                display block
                content ''
                clear both
        .feed-title
            position absolute
            width 100%
            height 100%
            text-align center
            z-index 1
            h1
                line-height 70px
    .mast-admin
        z-index 2
        position absolute
        right 0px
        top 0px
