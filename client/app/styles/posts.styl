
.post-new
    position relative
    & .post-toggle
        cursor pointer
        height 120px
        padding 40px
        & img
            float left
            margin-right 20px
        & .text-new
            float left
            text-transform uppercase
            -webkit-font-smoothing antialiased
            font-weight bold!important
            font-weight 700
            line-height 40px
            font-size 14px
        &::after
            display block
            content ''
            clear both
    & .post-form
        opacity 1
        & button
            margin-top 10px

.post
    cursor pointer
    position relative
    min-height 120px
    padding 10px 0
    & h1
        padding-bottom 10px
        padding-right 60px
    &:hover
        background #f5f5f5
    & .delete
        cursor pointer
        position absolute
        top 0px
        right 0px
        & h6
            line-height 20px
            margin-bottom 0px